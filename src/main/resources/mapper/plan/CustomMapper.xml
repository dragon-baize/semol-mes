<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.senmol.mes.plan.mapper.CustomMapper">

    <select id="getByProductId" resultType="com.senmol.mes.plan.entity.CustomEntity">
        SELECT
            c.id,
            c.title
        FROM
            plan_custom c
                LEFT JOIN plan_custom_product cp ON c.id = cp.custom_id
        WHERE
            cp.product_id = #{productId}
    </select>

</mapper>

